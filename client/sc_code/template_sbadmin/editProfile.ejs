<div class="container-fluid">
  <div class="row justify-content-md-center">
      <div class="col-md-6">
          <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                  <% if(msg.length) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                      <p class="text-secondary font-weight-bold"><%= msg %></p>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                  <% } %>
                  <div class="row">
                    <div class="col mb-4">
                      <form method="POST">
                        <div class="form-group">
                          <label for="email">Email</label>
                          <input value="<%= user.email %>" type="email" class="form-control" name="disabled" disabled id="email" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group">
                          <label for="username">Username</label>
                          <input value="<%= user.username %>" type="text" class="form-control" name="username" id="username" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group">
                          <label for="password">Password</label>
                          <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Edit</button>
                      </form>
                    </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>